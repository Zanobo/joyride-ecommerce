<%= render partial: 'spree/shared/error_messages', locals: { target: @user } %>

<div id="edit-account">
  <h1><%= Spree.t(:editing_address_user) %></h1>

  <div data-hook="account_edit">
    <%= form_for Spree::Address.new, as: @address, url: spree.user_path(@user), method: :put do |f| %>
      <%= render partial: 'spree/shared/user_address_form', locals: { f: f } %>
      <p>
        <%= f.submit Spree.t(:update), class: 'button primary' %>
      </p>
    <% end %>
  </div>
</div>
